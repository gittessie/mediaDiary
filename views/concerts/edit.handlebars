{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card card-body">
  <h3>Edit Concert</h3>
  <form action="/concerts/{{concert.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">

    <div class="form-group">
      <label for="headliner">Headliner</label>
      <input type="text" class="form-control" name="headliner" value="{{concert.headliner}}" required>
    </div>

    <div class="form-group">
      <label for="support">Support</label>
      <input type="text" class="form-control" name="support" value="{{concert.support}}">
    </div>

    <div class="form-group">
      <label for="venue">Venue</label>
      <input type="text" class="form-control" name="venue" value="{{concert.venue}}">
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      <input type="date" class="form-control" name="date" value="{{concert.date}}">
    </div>

    <div class="form-group">
      <label for="rating">Rating</label>
      <input type="number" class="form-control" min="0" max="5" step="1" name="rating" value="{{concert.rating}}">
    </div>

    <div class="form-group">
      <label for="review">Review</label>
      <textarea class="form-control" name="review">{{concert.review}}</textarea>
    </div>

    <button type="submit" class="btn btn-dark">Submit</button>
  </form>
</div>
