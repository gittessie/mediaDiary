
{{#each series}}
  <div class="card card-body mb-2">
    <h3>{{title}}</h3> <a href="/series/edit/{{id}}">Edit</a>
    {{#if season}}<p>Season: {{season}}</p>{{/if}}
    <p>{{date}}</p>
    <p>Rating: {{rating}} </p>
    <p>{{review}}</p>
    <form method="post" action="/series/{{id}}?_method=DELETE">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" class="btn btn-link" value="Delete">
    </form>
  </div>
  {{else}}
    <div class="card card-body mb-2">
      <p>You haven't posted about any tv shows yet!</p>
    </div>
  {{/each}}
  <p class="text-center"><a href="/series/add">Add a post.</a></p>
