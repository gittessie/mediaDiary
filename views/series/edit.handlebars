{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card card-body">
  <h3>Edit Series</h3>
  <form action="/series/{{series.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">

    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" name="title" value="{{series.title}}" required>
    </div>

    <div class="form-group">
      <label for="season">Season</label>
      <input type="number" class="form-control" min="0" step="1" name="season" value="{{series.season}}">
    </div>

    <div class="form-group">
      <label for="date">Date Finished</label>
      <input type="date" class="form-control" name="date" value="{{series.date}}">
    </div>

    <div class="form-group">
      <label for="rating">Rating</label>
      <input type="number" class="form-control" min="0" max="5" step="1" name="rating" value="{{series.rating}}">
    </div>

    <div class="form-group">
      <label for="review">Review</label>
      <textarea class="form-control" name="review">{{series.review}}</textarea>
    </div>

    <button type="submit" class="btn btn-dark">Submit</button>
  </form>
</div>
