{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card card-body">
  <h3>Edit Play</h3>
  <form action="/plays/{{play.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">

    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" name="title" value="{{play.title}}" required>
    </div>

    <div class="form-group">
      <label for="venue">Venue</label>
      <input type="text" class="form-control" name="venue" value="{{play.venue}}">
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      <input type="date" class="form-control" name="date" value="{{play.date}}">
    </div>

    <div class="form-group">
      <label for="rating">Rating</label>
      <input type="number" class="form-control" min="0" max="5" step="1" name="rating" value="{{play.rating}}">
    </div>

    <div class="form-group">
      <label for="review">Review</label>
      <textarea class="form-control" name="review">{{play.review}}</textarea>
    </div>

    <button type="submit" class="btn btn-dark">Submit</button>
  </form>
</div>
