{{#if concerts}}
  <table class="table ">
    <thead>
      <tr>
        <th scope="col">Headliner</th>
        <th scope="col">Venue</th>
        <th scope="col">Date</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each concerts}}
      <tr>
        <td>{{headliner}}</td>
        <td>{{venue}}</td>
        <td>{{date}}</td>
        <td><button type="button" class="btn btn-link"><a href="/concerts/edit/{{id}}">Edit</a></button></td>
        <td><form method="post" action="/concerts/{{id}}?_method=DELETE">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" class="btn btn-link" value="Delete">
        </form></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <div class="card card-body mb-2">
    <p>You haven't posted about any concerts yet!</p>
  </div>
  {{/if}}

  <p class="text-center"><a href="/concerts/add">Add a concert.</a></p>
