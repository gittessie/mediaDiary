{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card card-body">
  <h3>Edit Book</h3>
  <form action="/books/{{book.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">

    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" name="title" value="{{book.title}}" required>
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      <input type="text" class="form-control" name="author" value="{{book.author}}">
    </div>

    <div class="form-group">
      <label for="date">Date Finished</label>
      <input type="date" class="form-control" name="date" value="{{book.date}}">
    </div>

    <div class="form-group">
      <label for="rating">Rating</label>
      <input type="number" class="form-control" min="0" max="5" step="1" name="rating" value="{{book.rating}}">
    </div>

    <div class="form-group">
      <label for="review">Review</label>
      <textarea class="form-control" name="review">{{book.review}}</textarea>
    </div>

    <button type="submit" class="btn btn-dark">Submit</button>
  </form>
</div>
